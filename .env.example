# --- GCP / Vertex ---
GCP_PROJECT_ID=tu-proyecto
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/abs/path/sa_key.json

# Modelos (v√≠a Vertex Model Garden)
VERTEX_MODEL_PUBLISHER=anthropic      # p.ej. 'anthropic', 'mistral', 'meta'
VERTEX_MODEL_NAME=claude-3-5-sonnet   # nombre visible en Model Garden
VERTEX_TEMPERATURE=0.2
VERTEX_MAX_TOKENS=4000

# Speech-to-Text
STT_ENGINE=google                     # 'google' | 'gemini'
STT_LANGUAGE_CODE=es-ES               # o es-MX
STT_ENABLE_DIARIZATION=true

# Storage
USE_GCS=false
GCS_BUCKET=mi-bucket-salida

# Rutas locales
INPUT_DIR=./data/input
WORK_DIR=./data/work
OUTPUT_DIR=./data/output

# PDF
PDF_FOOTER_TEXT=Generado por Vertex Audio Report